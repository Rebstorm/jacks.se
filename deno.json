{
  "tasks": {
    "check": "deno fmt --check . && deno lint . && deno check",
    "dev": "vite",
    "build": "vite build",
    "preview": "deno serve -A _fresh/server.js",
    "upgrade": "deno run -Ar jsr:@fresh/update",
    "reload:lockfile": "deno cache --reload main.ts",
    "db:run": "deno run -A --unstable-kv server/cli/db.ts"
  },
  "imports": {

    "$std/": "https://deno.land/std@0.198.0/",

    "@deno/gfm": "jsr:@deno/gfm@^0.10.0",
    "prismjs": "npm:prismjs@1.29.0",

    "canvas-confetti": "npm:canvas-confetti@^1.9.4",

    "@/": "./",
    "fresh": "jsr:@fresh/core@^2.2.0",
    "preact": "npm:preact@^10.27.2",
    "@preact/signals": "npm:@preact/signals@^2.5.0",
    "@fresh/plugin-vite": "jsr:@fresh/plugin-vite@^1.0.8",
    "vite": "npm:vite@^7.1.3"
  },

  "nodeModulesDir": "manual",
  "lint": { "rules": { "tags": ["fresh", "recommended"] } },
  "unstable": ["kv"],
  "compilerOptions": {
    "lib": [
      "dom",
      "dom.asynciterable",
      "dom.iterable",
      "deno.ns"
    ],
    "jsx": "precompile",
    "jsxImportSource": "preact",
    "jsxPrecompileSkipElements": [
      "a",
      "img",
      "source",
      "body",
      "html",
      "head",
      "title",
      "meta",
      "script",
      "link",
      "style",
      "base",
      "noscript",
      "template"
    ],
    "types": [
      "vite/client"
    ]
  },

  "exclude": ["**/_fresh/*"]
}
